<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="15dp"/>
            <padding android:left="-2dp" android:right="10dp" android:top="2dp" android:bottom="2dp"/>
            <stroke android:width="2dp" android:color="#f50000"/>
            <solid android:color="#aaff0000"></solid>
        </shape>
    </item>

    <item android:gravity="center" android:left="11dp" android:width="15dp" android:height="75dp">
        <rotate android:fromDegrees="-45">
            <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                <solid android:color="#ff2b2b"></solid>
            </shape>
        </rotate>
    </item>

    <item android:gravity="center" android:left="11dp" android:width="15dp" android:height="75dp">
        <rotate android:fromDegrees="45">
            <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                <solid android:color="#ff2b2b"></solid>
            </shape>
        </rotate>
    </item>
</layer-list>